/*
* This will find any prime number factors up to
* a given number supplied by the user.
*/

#include <iostream>


int primeCheck(int num)
{
    bool isPrime = false;

    for(int i = 2; i<num; i++)
    {

        if(num%i == 0)
        {
            isPrime = false;
            return isPrime;
        }
        else
        {
            isPrime = true;
            return isPrime;
        }
    }
}

int main()
{

    int result;
    int userNum;

    std::cout<<"Enter a number"<<std::endl;
    std::cin>>userNum;

    result = primeCheck(userNum);

    std::cout<<userNum<<" is "<<result<<std::endl;


    return 0;
}
